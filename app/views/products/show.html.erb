<div class="container">
	<div class="row">
		<div class="col-md-7 pull-right">
		<p id="notice"><%= notice %></p>

		<p id="show-image">
		<%= image_tag(@product.image_url, height: "300", width: "400", class: "img-zoom") %>

		<script>
			$('#zoom_01').elevateZoom();
		</script>
		</p>

		<p>
 	 	<strong>Name:</strong>
 	 	<%= @product.name %>
		</p>

		<p>
  		<strong>Description:</strong>
  		<%= @product.description %>
		</p>


		<p>
		<strong>Price:</strong>
		<%= @product.price %>
		</p>

	
		<p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div></p>

		<p>
		<%= form_tag "/payments/create" do %>
		<%= render partial: "shared/stripe_checkout_button", locals: {product: @product} %>
		<% end %>
		<%= yield %>
		</p>
		</div>

	<%= render 'comments/new_comment' %>
	<%= render 'comments/listing_reviews' %>
	</div>
	<%= link_to 'Edit', edit_product_path(@product) %> |
	<%= link_to 'Back', products_path %>



</div>
